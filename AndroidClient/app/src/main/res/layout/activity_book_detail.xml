<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.flintsoft.miman.BookDetailActivity">
    <GridLayout
        android:id="@+id/grdLayoutDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="4"
        android:rowCount="6">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDetailCover"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:layout_rowSpan="6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtDetailTitle"
            android:layout_marginLeft="10dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:layout_rowSpan="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtDetailAuthor"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="2"
            android:layout_rowSpan="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtDetailVisited"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:layout_rowSpan="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtDetailRating"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:layout_rowSpan="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/btnDetailStart"
            android:onClick="beginRead"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_rowSpan="2" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入收藏"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/btnDetailFavorite"
            android:onClick="doFavorite"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_rowSpan="2" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtDetailIntro"
        android:singleLine="false"
        android:layout_below="@+id/grdLayoutDetail"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.flintsoft.miman.FixedGridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grdDetailChapters"
        android:layout_below="@+id/txtDetailIntro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:columnWidth="80dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"
        android:gravity="center" />
</RelativeLayout>
</ScrollView>
